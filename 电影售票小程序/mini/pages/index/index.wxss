swiper {
  width: 100%;
  height: 386rpx;
}

swiper image {
  width: 100%;
  height: 100%;
}

.van-tabs__line {
  background: #ff5f16 !important;
}

.ul {
  display: flex;
  background: white;
  list-style: none;
  padding: 30rpx;
}

image {
  width: 132rpx;
  display: inline-block;
  height: 181rpx;
}

.li {
  display: flex;
  padding: 30rpx 30rpx 30rpx 0;
  height: 188rpx;
  position: relative;
}

.box {
  width: 418rpx;
  padding: 10rpx 20rpx 0;
}

.title {
  max-width: calc(100% - 50rpx);
  color: #191a1b;
  font-size: 32rpx;
  height: 44rpx;
  line-height: 44rpx;
  margin-right: 10rpx;
  overflow: hidden;
}

.type {
  font-size: 18rpx;
  color: #fff;
  background-color: #d2d6dc;
  height: 28rpx;
  line-height: 28rpx;
  padding: 0 4rpx;
  border-radius: 4rpx;
}

.grade {
  color: #ffb232;
  font-size: 27rpx;
}

.same {
  font-size: 26rpx;
  margin-top: 8rpx;
  color: #797d82;
   visibility:visible;
}
.visible {
   visibility:hidden!important;
}
.buyticket {
  line-height: 50rpx;
  height: 50rpx;
  width: 100rpx;
  color: #ff5f16;
  font-size: 26rpx;
  text-align: center;
  border-radius: 4rpx;
  position: relative;
  margin: auto 0;
}

.buyticket:after {
  content: "";
  -webkit-transform: scale(0.5);
  -ms-transform: scale(0.5);
  transform: scale(0.5);
  position: absolute;
  border: 2rpx solid #ff5f16;
  top: -50%;
  right: -50%;
  bottom: -50%;
  left: -50%;
  border-radius: 8rpx;
}

.nomore {
  height: 118rpx;
  background-color: #ededed;
  color: #bdc0c5;
  font-size: 26rpx;
  text-align: center;
  margin: auto;
  line-height: 118rpx;
}

