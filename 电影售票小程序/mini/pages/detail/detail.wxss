  text-align: left;
}

.box1 {
  background-color: white;
  font-family: Microsoft YaHei;
  width: 100%;
  padding: 24rpx 30rpx 30rpx 30rpx;
  transition: all 0.3s;
}

.xia {
  width: 25rpx;
  height: 15rpx;
  margin: 25rpx auto;
  padding-bottom: 15rpx;
}

.translate {
  padding-bottom: 15rpx;
  transform: rotate(180deg) !important;
}

.p {
  font-size: 26rpx;
  color: #797d82;
  margin-top: 8rpx;
  line-height: 40rpx;
}

.overFlow {
  margin-top: 22rpx;
  width: 92%;
  display: block;
  line-height: 38rpx;
  overflow: hidden;
}

.introduce {
  transition:0.5s;
  margin-top: 22rpx;
  height: 76rpx;
  overflow: hidden;
  display: block;
  text-align: left;
  font-size: 26rpx;
  color: #797d82;
  width: 93%;
  line-height: 40rpx;
}

.height {
  transition: 0.5s;
  margin-top: 22rpx;
  display: block;
  overflow: hidden;
  text-align: left;
  font-size: 26rpx;
  color: #797d82;
  width: 93%;
  line-height: 40rpx;
  height: auto;
}

.name {
  margin-top: 6rpx;
  color: #191a1b;
  font-size: 36rpx;
  height: 48rpx;
  line-height: 48rpx;
  margin-right: 14rpx;
}

image {
