  display: flex;
  white-space: nowrap;
  padding-left: 30rpx;
  width: 100%;
  height: 306rpx;
  background-color: white;
}

.boxx image {
  width: 170rpx;
  height: 230rpx;
  display: inline-block;
}

.boxx .dl {
  margin-left: 10rpx;
  width: 170rpx;
  display: inline-block;
  white-space: nowrap;
  text-overflow: ellipsis;
