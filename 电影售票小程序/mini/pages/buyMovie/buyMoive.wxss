.showM {
  font-family: Microsoft YaHei, Tahoma, Helvetica, Arial, sans-serif;
  line-height: 50rpx;
  height: 90rpx;
  padding: 30rpx;
  position: relative;
  background: #fff;
}



.Div3 {
  padding-top: 30rpx;
  width: 100%;
  height: 500rpx;
  text-align: center;
  color: #999;
}

.middle {
  margin-left: 15rpx;
  float: left;
  width: calc(100% - 480rpx);
}

.middle   view:nth-of-type(1) {
  font-size: 30rpx;
  color: #191a1b;
  overflow: hidden;
  -o-text-overflow: ellipsis;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.middle    view:nth-of-type(2) {

  font-size: 26rpx;
  color: #797d82;
  margin-top: 4rpx;
  overflow: hidden;
  -o-text-overflow: ellipsis;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.right {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  line-height: 50rpx;
  color: #ff5f16 !important;
  float: right;
}

.right  view:nth-of-type(1) {
  float: right;
  padding-right: 40rpx;
  font-size: 30rpx;
  color: #ff5f16;
}

.right   view:nth-of-type(2) {
  height: 50rpx;
  color: #ff5f16;
  width: 100rpx;
  border-radius: 4rpx;
  position: relative;
  text-align: center;
  font-size: 24rpx;
}

.right   view:nth-of-type(2):after {
  content: " ";
  -webkit-transform: scale(0.5);
  -ms-transform: scale(0.5);
  transform: scale(0.5);
  position: absolute;
  top: -50%;
  right: -50%;
  bottom: -50%;
  left: -50%;
  border: 2rpx solid #ff5f16;
  border-radius: 8rpx;
}

.left {
  float: left;
}

.left view:nth-of-type(1) {
  font-size: 30rpx;
  color: #191a1b;
}

.left  view:nth-of-type(2) {
  font-size: 26rpx;
  color: #797d82;
  margin-top: 4rpx;
}

.swiper {
  height: 320rpx;
  padding: 30rpx 0;
  background: white;
  position: relative;
}

.a {
  margin: 0 30rpx !important;
}

.bg {
  position: absolute;
  width: 100%;
  height: 100%;
  filter: blur(15px);
}

.swiper swiper-item  image {
  width: 230rpx;
  height: 100%;
  display: block;
  margin: 0 auto;
}

.box {
  width: 100%;
  overflow: hidden;
  background-color: #fff;
}

.img1 {
  display: inline-block;
  width: 40rpx;
  height: 20rpx;
  position: absolute;
  bottom: 0;
  right: 350rpx;
  z-index: 2003;
}

.icon-left {
  width: 100%;
  height: 88rpx;
  display: block;
  padding-left: 20rpx;
  font-size: 50rpx;
